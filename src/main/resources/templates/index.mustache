{{> /layout/header}}

<div class="container p-5">
    <div class>
        <h2 class="mb-4">인덱스 홈 화면</h2>
    </div>

    <div class="mb-2 d-flex justify-content-end">
        <form class="d-flex" action="/" method="get" onsubmit="return valid()">
            <input id="keyword" class="form-control me-2" type="text" name="keyword" placeholder="검색어를 적으세요" required>
            <button class="btn btn-primary" type="submit">Search</button>
        </form>
    </div>

    <script>
        function isWhitespace(str) {
            return str.trim() === '';
        }

        function valid() {
            let keyword = document.querySelector("#keyword").value;
            console.log(keyword);
            if (isWhitespace(keyword)) {
                alert('공백을 입력할 수 없습니다');
                return false;
            }
        }
    </script>

  </script>

    {{#boardList}}
    <div class="card mb-3">

        <div class="card-body">
            <h4 class="card-title mb-3">{{title}}</h4>
            <a href="/board/{{id}}" class="btn btn-primary">상세보기</a>
        </div>

    </div>
    {{/boardList}}

    <!-- disabled = 입력 못 하게 흑백처리 -->
    <ul class="pagination d-flex justify-content-center">
        <li class="page-item {{#first}}disabled{{/first}}"><a class="page-link" href="?page={{prevPage}}">이전</a></li>
        <li class="page-item {{#last}}disabled{{/last}}"><a class="page-link" href="?page={{nextPage}}">다음</a></li>
    </ul>

</div>

{{> /layout/footer}}
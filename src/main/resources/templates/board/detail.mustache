{{> /layout/header}}

<div class="container p-5">

  <!-- 수정삭제버튼 -->
  {{#pageOwner}}
  <div class="d-flex justify-content-end">
    <a class="btn btn-warning me-1" href="/board/{{dtos.0.boardId}}/updateForm">수정</a>

    <form action="/board/{{dtos.0.boardId}}/delete" method="post">
      <button type="submit" class="btn btn-danger">삭제</button>
    </form>

  </div>
  {{/pageOwner}}

  <!-- 게시글내용 -->
  
  <div>
    <h2><b>{{dtos.0.boardTitle}}</b></h2>
    <hr />
    <div class="m-4 p-2">
      {{dtos.0.boardContent}}
    </div>
  </div>
  
  <!-- 댓글 -->
  <div class="card mt-3">
    <!-- 댓글등록 -->
    <div class="card-body">

      <form action="/reply/save" method="post">
        <input type="hidden" name="boardId" value="{{dtos.0.boardId}}">
        <textarea class="form-control" rows="2" name="comment"></textarea>
        <div class="d-flex justify-content-end">
          <button type="submit" class="btn btn-outline-primary mt-1">댓글등록</button>

        </div>
      </form>
    </div>

    <!-- 댓글목록 -->
    <div class="card-footer">

      <b>댓글리스트</b>
    </div>
    <div class="list-group">

      <!-- 댓글아이템 -->
      {{#dtos}}
      {{#replyId}}
      <div class="list-group-item d-flex justify-content-between align-items-center">
        <div class="d-flex">
          <div class="px-1 me-1 bg-primary text-white rounded">{{replyUserUsername}}</div>
          <div>{{replyComment}}</div>
        </div>
        {{#replyOwner}}
        <form action="/reply/{{replyId}}/delete" method="post">
          <input type="hidden" name="boardId" value="{{boardId}}"/>
          <button class="btn">🗑</button>
        </form>
        {{/replyOwner}}
      </div>
      {{/replyId}}
      {{/dtos}}
      
    </div>
  </div>
</div>

{{> /layout/footer}}


{{> /layout/header}}

<div class="container p-5">

 <!-- 요청을 하면 localhost:8080/board/save POST로 요청됨
    title=사용자입력값&content=사용자값 -->
    <div class="card">
      <div class="card-header"><b>글수정 화면입니다</b></div>
      <div class="card-body">
          <form action="/board/{{board.id}}/update" method="post" enctype="application/x-www-form-urlencoded">

              <div class="mb-3">
                  <input type="text" class="form-control" placeholder="Enter title" name="title" required maxlength="100" value="{{board.title}}">
              </div>

              <div class="mb-3">
                  <textarea class="form-control" rows="5" name="content">{{board.content}}</textarea>
              </div>

              <button type="submit" class="btn btn-primary form-control">글수정 완료</button>

          </form>
      </div>
      
  </div>
</div>
{{> /layout/footer}}